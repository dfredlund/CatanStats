<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gameNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Game Number: 1" />

    <TextView
        android:id="@+id/gamePlayedOnDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/gameNumber"
        android:layout_marginLeft="12dp"
        android:text="Played: 2/18/2018" />

    <TextView
        android:id="@+id/numberTurns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gameNumber"
        android:layout_marginTop="12dp"
        android:text="125 Turns" />

    <TextView
        android:id="@+id/playerNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numberTurns"
        android:layout_alignBottom="@+id/numberTurns"
        android:layout_toEndOf="@+id/numberTurns"
        android:layout_marginLeft="12dp"
        android:text="Players: David, Davidson, Fredlund" />
</RelativeLayout>