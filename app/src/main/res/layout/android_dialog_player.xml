<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialogPlayerColorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dialogPlayerName"
        android:layout_alignTop="@+id/dialogPlayerColor"
        android:text="Color: "
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/dialogPlayerColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/dialogPlayerColorLabel"
        android:textSize="24sp"
        android:text="Turn Order: 1" />

    <EditText
        android:id="@+id/dialogPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dialogPlayerColor"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:hint="Player Name"
        android:textSize="24sp" />

    <Button
        android:id="@+id/dialogPlayerSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dialogPlayerCancel"
        android:layout_alignBottom="@+id/dialogPlayerCancel"
        android:layout_alignStart="@+id/dialogPlayerName"
        android:text="Submit" />

    <Button
        android:id="@+id/dialogPlayerCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/dialogPlayerSubmit"
        android:layout_below="@+id/dialogPlayerName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Cancel" />


</RelativeLayout>